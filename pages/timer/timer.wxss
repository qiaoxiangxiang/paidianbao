.appBody{
  width: 100%;
  min-height: 100%;
  background: #f2f2f2;
}
.timerLB{
  width: 670rpx;
  height: 94rpx;
  border-bottom: 20rpx solid #f2f2f2;
  background: #fff;
  padding: 0 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.timerTxt{
  font-size: 29.02rpx;
  color: #333;
}
.timerCJ{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 25.43rpx;
  color: #b4b8c0;
}
.timerImage{
  width: 20rpx;
  margin-left: 20rpx;
}
.timerTxt1{
  font-size: 22.69rpx;
  color: #b4b8c0;
}
.timerLBBox{
  width: 670rpx;
  border-bottom: 20rpx solid #f2f2f2;
  background: #fff;
  padding: 23rpx 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
}
.timerTxt2{
  width: 25%;
  height: 85rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 25.18rpx;
  color: #333;
}
.timerLB1{
  border-bottom: 2rpx solid #f2f2f2;
}
.timerLB1 .timerImage{
  width: 10rpx;
}
.timerLBFixed{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 90rpx;
  left: 0;
  background: rgba(0,0,0,.7)
}
.timerLB2{
  border-top: 2rpx solid #f2f2f2;
  border-bottom: 0 solid rgba(0,0,0,0);
}
/* btn */
.timerLB3{
  padding: 0;
  border: none;
  height: 88rpx;
  font-size: 29.02rpx;
  color: #fff;
  margin:  0 auto;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #e72418;
  border-radius: 10rpx;
}
.timerLB3btn{
  margin: 80rpx auto 32rpx;
  background: #fff;
  color: #333;
  box-shadow: 0 0 10rpx #aaa;
}
.timerLB4{
  padding: 0;
  border: none;
  font-size: 29.02rpx;
  color: #333;
  margin:  0 auto;
  flex-direction: column;
  background: rgba(0,0,0,0);
  margin-top: 38rpx;
  line-height: 46rpx;
  padding-bottom: 34rpx;
  height: auto;
}
