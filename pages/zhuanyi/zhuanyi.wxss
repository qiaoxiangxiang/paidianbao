/* pages/WXZZ/WXZZ.wxss */
@import "../dsluke/dsluke.wxss";
.wxXZBtnBox{
  border-bottom: none;
}
.zhuanyiTitle{
  width: 94%;
  padding: 20rpx 3%;
  font-size: 26.26rpx;
  color: #f5090b;
  background: rgba(255,255,0,.2);
  opacity: .8;
}
.sjBoxTitle{
  height: 80rpx;
}
/* 底部按钮 */
.detailBottom{
  width: 100%;
  height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 3;
  background: #fff;
}
.detailBtn{
  width: 280rpx;
  height: 80rpx;
  border-radius: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 26.24rpx;
  background: #f5090b;
  color: #fff;

}
.detailBtn:nth-of-type(1){
  margin-right: 30rpx;
  background: #f4f4f4;
  color: #666;
}